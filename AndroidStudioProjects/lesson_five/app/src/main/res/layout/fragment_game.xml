<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="gameViewModel"
            type="com.example.lesson_five.game.GameViewModel" />
    </data>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="15dp">

        <TextView
            android:id="@+id/text_view_word"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="The Word is:" />

        <TextView
            android:id="@+id/text_view_game_word"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/text_view_word"
            android:layout_centerHorizontal="true"
            android:text="@{@string/quote_format(gameViewModel.word)}"
            android:textColor="@android:color/holo_green_dark"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/text_view_score"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/text_view_game_word"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="40dp"
            android:text="@{@string/score_format(gameViewModel.score)}"
            android:textSize="15dp" />
        <TextView
            android:id="@+id/timer_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/text_view_score"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="40dp"
            android:textSize="15dp" />


        <Button
            android:id="@+id/button_got"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:background="@android:color/holo_green_dark"
            android:onClick="@{()->gameViewModel.onCorrect()}"
            android:text="Got it"
            android:textColor="@android:color/white" />

        <Button
            android:id="@+id/button_skip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:background="@android:color/transparent"
            android:onClick="@{()->gameViewModel.onSkip()}"
            android:text="Skip"
            android:textColor="@android:color/black" />


    </RelativeLayout>

</layout>